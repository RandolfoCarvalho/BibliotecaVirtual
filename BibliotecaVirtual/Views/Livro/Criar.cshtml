@*

*@
@model BibliotecaVirtual.Models.ViewModels.LivroFormView;
@{
    ViewData["Title"] = "Criar";
}
<h2> @ViewData["Title"] </h2>
<hr />
<style>
    .btn-default {
        background-color: black;
        color: white;
        margin-top: 15px;
    }

        .btn-default:hover {
            color: white;
        }
</style>

@*Row garante que a div vai ocupar a largura da tela*@
<div class="row">
    @*Usando 1/3 da tela, por que bootstrap divide a tela em 12 partes e 4 é 1/3 da tela*@
    <div class="col-md-4">
        <form asp-action="Criar">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                @*Aqui mesmo já esta preenchendo o atributo do tipo Seller do SellerFormViewModel*@
                <label asp-for="Livro.Name" class="control-label"></label>
                <input asp-for="Livro.Name" class="form-control" />
            </div>
            <div class="form-group">
                @**@
                <label asp-for="Livro.Genero" class="control-label"></label>
                <input asp-for="Livro.Genero" class="form-control" />

            </div>
            <div class="form-group">
                @**@
                <label asp-for="Livro.AnoPublicacao" class="control-label"></label>
                <input type="date" asp-for="Livro.AnoPublicacao" class="form-control" />

            </div>
            <div class="form-group">
                @**@
                <label asp-for="Livro.NumeroPaginas" class="control-label"></label>
                <input asp-for="Livro.NumeroPaginas" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Livro.Sinopse" class="control-label"></label>
                <input asp-for="Livro.Sinopse" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Livro.Disponibilidade" class="control-label"></label>
                <select asp-for="Livro.Disponibilidade" asp-items="@(new SelectList(Enum.GetValues(typeof(BibliotecaVirtual.Enums.DisponibilidadeLivro))))" class="form-control"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>
@*Cliente side validation*@
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}