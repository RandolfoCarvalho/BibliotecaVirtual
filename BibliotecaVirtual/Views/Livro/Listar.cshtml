@*

*@
@model IEnumerable<BibliotecaVirtual.Models.Livro>
@{
    ViewData["Title"] = "Livros";

}
<h2> @ViewData["Title"] </h2>
<p> <a asp-action="Create" class="btn btn-default"> Create New </a></p>
<table class="table table-dark table-striped-columns">
    <thead>
        <tr class="success">
            <th>
                @*Renderiza os conteudos passados*@
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @*Renderiza os conteudos passados*@
                @Html.DisplayNameFor(model => model.Genero)
            </th>
            <th>
                @*Renderiza os conteudos passados*@
                @Html.DisplayNameFor(model => model.AnoPublicacao)
            </th>
            <th>
                @*Renderiza os conteudos passados*@
                @Html.DisplayNameFor(model => model.NumeroPaginas)
            </th>
            <th>
                @*Renderiza os conteudos passados*@
                @Html.DisplayNameFor(model => model.Sinopse)
            </th>
            <th>
                @*Renderiza os conteudos passados*@
                @Html.DisplayNameFor(model => model.Disponibilidade)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Genero)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AnoPublicacao)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NumeroPaginas)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Sinopse)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Disponibilidade)
                </td>
                <td>
                    @*Passa o Id do vendedor que eu clica no asp-route-id*@
                    @*Quando algum desses for clicado vai acionar o método do controlador*@
                    <a asp-action="Edit" asp-route-id="@item.Id"> Edit </a>
                    <a asp-action="Details" asp-route-id="@item.Id"> Details </a>
                    <a asp-action="Delete" asp-route-id="@item.Id"> Delete </a>
                </td>
            </tr>
        }
    </tbody>
</table>